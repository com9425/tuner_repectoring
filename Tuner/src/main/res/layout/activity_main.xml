<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/qwdwe"
    tools:context=".MainActivity">


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_above="@+id/base1"
            android:scrollbarStyle="outsideOverlay"
            android:layout_marginBottom="70dp"
            android:layout_margin="60dp"
            android:layout_centerInParent="true"
            style="@style/Widget.AppCompat.Spinner"
            android:background="@drawable/spinner_background"
            android:theme="@style/SpinnerTheme"

            />
    <Button
        android:id="@+id/cord_D"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/mybtn1"
        android:text="D"
        android:layout_alignTop="@+id/base1"
        android:layout_toLeftOf="@+id/base1"/>
    <Button
        android:id="@+id/cord_A"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="A"
        android:background="@drawable/mybtn1"
        android:layout_toLeftOf="@+id/base1"
        android:layout_centerInParent="true"
        />
    <Button
        android:id="@+id/cord_E"
        android:layout_width="60dp"
        android:background="@drawable/mybtn1"
        android:layout_height="60dp"
        android:text="E"
        android:layout_toLeftOf="@+id/base1"
        android:layout_alignBottom="@+id/base1"/>

    <ImageView
        android:id="@+id/base1"

        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/dfsfa"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>




    <Button
        android:id="@+id/cord_G"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="G"
        android:layout_alignTop="@+id/base1"
        android:background="@drawable/mybtn1"
        android:layout_toRightOf="@+id/base1"/>

    <Button
        android:id="@+id/cord_B"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/mybtn1"
        android:layout_toRightOf="@+id/base1"
        android:layout_centerInParent="true"
        android:text="B" />

    <Button
            android:id="@+id/cord_HE"
            android:background="@drawable/mybtn1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="E"

            android:layout_alignBottom="@+id/base1"
            android:layout_toRightOf="@+id/base1"/>





</RelativeLayout>